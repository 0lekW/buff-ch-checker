{
  "manifest_version": 3,
  "name": "buff-ch-checker",
  "version": "1.3",
  "description": "Shows blue percentage for Case Hardened skins on buff163",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Settings",
    "default_icon": {
      "48": "icon.png",
      "128": "icon.png",
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://buff.163.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blue_gem_data.json"],
      "matches": ["*://buff.163.com/*"]
    }
  ]
}